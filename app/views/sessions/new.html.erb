<h1>Sign In</h1>

<%= form_tag sessions_path do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, params[:name] %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Sign In", class: "btn btn-danger" %>
<% end %>
